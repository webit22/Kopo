package day0315;

import java.util.Scanner;

class Ice {
	String name;
	int price;
}

public class Review {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Ice ic = new Ice();
		ic.name = "";
		ic.price = 0;

		Ice ic2 = new Ice();
		ic2.name = "";
		ic2.price = 0;

		Ice ic3 = new Ice();
		ic3.name = "";
		ic3.price = 0;

		System.out.print("구입할 아이스크림 개수 : ");
		int num = sc.nextInt();

		Ice[] arr = { ic, ic2, ic3 };
		for (int i = 0; i < num; i++) {
			System.out.println("\n*** " + (i + 1) + "번째 아이스크림 구매 정보 ***");
			System.out.print("아이스크림 이름 : ");
			arr[i].name = sc.next();
			System.out.print("아이스크림 가격 : ");
			arr[i].price = sc.nextInt();
		}

		System.out.println(" < 총 " + num + "개의 아이스크림 구매정보 출력 >");
		System.out.println("번호\t아이스크림명  가격");
		int sum = 0;
		for (int i = 0; i < num; i++) {
			System.out.println((i + 1) + "\t" + arr[i].name + "\t" + arr[i].price);
			sum += ic.price;
		}
		System.out.println("\n총 판매액 : " + sum);
	}
}
